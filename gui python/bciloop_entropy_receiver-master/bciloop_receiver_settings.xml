<?xml version="1.0"?>
<bciloop>
	<!-- Buffer parameters -->
	<window-length>1.5</window-length>
	<window-shift>0.125</window-shift>
    <sampling-rate>512</sampling-rate>

	<!-- Filter parameters -->
	<filter-order>4</filter-order>
	<filter-lowf>16</filter-lowf>
	<filter-highf>30</filter-highf>

	<!-- Classification parameters -->
	<entropy-nbins>32</entropy-nbins>
	<csp-dimm>8</csp-dimm>
	<num-classes>2</num-classes>

	<!-- Integrator parameters -->
	<integrator-alpha>0.9</integrator-alpha>
	<integrator-threshold>0.5</integrator-threshold>
    <integrator-rejection>0.5</integrator-rejection>
    <integrator-begin>0</integrator-begin>

    <!-- Training parameters -->
    <load-data>0</load-data>
    <save-classifier>1</save-classifier>
    <crossval-apply>1</crossval-apply>
	<crossval-nfold>5</crossval-nfold>

	<!-- Drawing parameters -->
	<screen-height>768</screen-height>
    <screen-width>1024</screen-width>
    <screen-scale>1</screen-scale>

</bciloop>